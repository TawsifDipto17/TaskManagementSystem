<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">Edit Task</h1>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
          <li class="breadcrumb-item active">Edit Task</li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      <b> Task ID : <%= task._id %> </b>
    </div>
  </div>

</div>


<form action="/edit/<%= task._id %>?_method=PUT" method="POST">

  <div class="row form-group mb-4">
    <div class="col">
      <label for="tasktitle">Task Title</label>
      <input type="text" class="form-control" id="tasktitle" name="tasktitle" value="<%= task.tasktitle %>" placeholder="" required>
    </div>

  </div>

  <div class="row form-group mb-4">
    <div class="col">
      <label for="date">Due Date</label>
      <input type="date" class="form-control" id="date" name="date" value="<%=task.date%>" placeholder="yyyy-mm-dd" required>
    </div>
  </div>

  <div class="row form-group mb-4">
    <label for="priority">Priority</label><br>
    <div class="radio-group">
        <label class="radio-button">
            <input type="radio" name="priority" value="high" <%= task.priority === "high" ? 'checked' : '' %>> High
        </label>
        <label class="radio-button">
            <input type="radio" name="priority" value="medium" <%= task.priority === "medium" ? 'checked' : '' %>> Medium
        </label>
        <label class="radio-button">
            <input type="radio" name="priority" value="low" <%= task.priority === "low" ? 'checked' : '' %>> Low
        </label>
    </div>
</div>



  <div class="form-group mb-4">
      <label for="description">Description</label>
      <textarea class="form-control" name="description" id="description" cols="30" rows="12" placeholder="<%=task.description%>"></textarea>
  </div>

  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Update Task</button>
    <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete Task</button>
    <button type="submit" class="btn btn-primary" style="background-color: green;">Mark as Completed</button>
  </div>
</form>

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-title">You are about to remove a task.</div>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>
          <b>This will remove the task record.</b><br/>
          Are you sure?
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <form action="/edit/<%= task._id %>?_method=DELETE" method="POST" class="position-relative">
          <button type="submit" class="btn btn-primary">Yes, Remove Task</button>
        </form>
      </div>
    </div>
  </div>
</div>